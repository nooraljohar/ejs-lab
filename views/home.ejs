<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= restaurant.name %> - Menu</title> <!-- Title dynamically shows restaurant name -->
</head>
<body>
  <!-- Include the navigation partial -->
  <%- include('./partials/nav') %>

  <h1>Menu - <%= restaurant.name %></h1> <!-- Display the restaurant name in the header -->

  <h2>Mains</h2>
  <ul>
    <!-- Loop through each item in the menu array and display details for 'mains' -->
    <% menu.forEach(item => { %>
      <% if (item.category === 'mains') { %>
        <li>
          <h3><%= item.name %> - $<%= item.price.toFixed(2) %></h3>
          <p><strong>Rating:</strong> <%= item.rating %> stars</p>
          <p><%= item.details %></p>
        </li>
      <% } %>
    <% }); %>
  </ul>

  <h2>Desserts</h2>
  <ul>
    <!-- Loop through each item in the menu array and display details for 'desserts' -->
    <% menu.forEach(item => { %>
      <% if (item.category === 'desserts') { %>
        <li>
          <h3><%= item.name %> - $<%= item.price.toFixed(2) %></h3>
          <p><strong>Rating:</strong> <%= item.rating %> stars</p>
          <p><%= item.details %></p>
        </li>
      <% } %>
    <% }); %>
  </ul>

  <h2>Sides</h2>
  <ul>
    <!-- Loop through each item in the menu array and display details for 'sides' -->
    <% menu.forEach(item => { %>
      <% if (item.category === 'sides') { %>
        <li>
          <h3><%= item.name %> - $<%= item.price.toFixed(2) %></h3>
          <p><strong>Rating:</strong> <%= item.rating %> stars</p>
          <p><%= item.details %></p>
        </li>
      <% } %>
    <% }); %>
  </ul>

</body>
</html>


